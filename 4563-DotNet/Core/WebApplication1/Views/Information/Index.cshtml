@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<h2>
	Current DateTime and Year: @HttpContextAccessor.HttpContext.Session.GetString("CurrentDateTime"),@HttpContextAccessor.HttpContext.Session.GetInt32("CurrentYear")
</h2>
@{
	ViewData["Title"] = "Information List";
}
@model IEnumerable<Information>
<h1 class="bg-info text-white">Information List</h1>
<a asp-action="Create" class="btn btn-secondary">Create Information</a>
<table class="table table-sm table-bordered">
	<tr>
		<th>Id</th>
		<th>Name</th>
		<th>License</th>
		<th>Established</th>
		<th>Revenue</th>
		<th>Update</th>
		<th>Delete</th>
	</tr>
	@foreach (Information infor in Model)
	{
		<tr>
			<td>@infor.Id</td>
			<td>@infor.Name</td>
			<td>@infor.License</td>
			<td>@infor.Established</td>
			<td>@infor.Revenue</td>			
			<td>
				<a class="btn btn-sm btn-primary" asp-action="Update"
				   asp-route-id="@infor.Id">Update</a>
			</td>
			<td>
				<form asp-action="Delete" asp-route-id="@infor.Id" method="post">
					<button type="submit" class="btn btn-sm btn-success">Delete</button>
				</form>
			</td>
		</tr>
	}
</table>
